---
import { Image } from "astro:assets";
import AstroImage from "@/img/astro.webp"
const { url, title, description, date } = Astro.props;
---


<li>
  <article>
    <a href={url}>
      <header>
        <span>
          {date}
        </span>
      </header>     
      <div>
        <Image src={AstroImage} alt="una imagen"/>
      </div>
      <div class="information">
        <h2>{title}</h2>
        <p>{description}</p>
      </div>
    </a>
  </article>
</li>
  



<style>
  li {
    background-color: red; 
  }
  article {
    padding: 1rem;
  }
  img{
    max-width: 100%;
    height: auto;
  }
  div{
    margin-block: 1dvh
  }
  
  .information{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0;
  }
  p{
    max-width: 35ch;
    opacity: .9;
  }
</style>