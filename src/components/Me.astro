---
import { Image } from "astro:assets";
import Cartulina from "@/img/cartulina.webp";
import Mario from "@/img/Mario-2-removebg-preview.png";
import { getI18N } from "@/i18n";

const {currentLocale} = Astro;

const i18n = getI18N({currentLocale})
---

<section>
  <div class="photo-me">
    <Image src={Mario} alt={"Yo pues quien mas"} loading={"eager"}  />
  </div>
  <div class="cardboard">
    <Image src={Cartulina} height={300} alt={"Cartulina blanca"} loading={"eager"}/>
  </div>
  <div class="text-me">
    <h3 set:html={i18n.ME_SUBTITLE}/>
    <h1>{i18n.ME_TITLE}</h1>
    <p set:html={i18n.ME_PARAGRAPH}></p>
    <button>{i18n.ME_BTNTEXT}</button>
  </div>
</section>
<div class="h-line"></div>

<style>
  section {
    position: relative;
    width: 100%;
    height: 96vh;
  }
  .text-me {
    position: absolute;
    width: 100%;
    top:49dvh;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 20;
    color: black;
    padding: 1em;
  }
  h3 {
    font-weight: 600;
    font-size: 1rem;
    margin-bottom: 0;
    text-align: center;
    
  }
  h1 {
    text-transform: uppercase;
    text-wrap: balance;
    font-weight: 900;
    font-size: 2.1rem;
    line-height: 1.2;
    margin-block: 5px;
    text-align: center;
    margin-top: 10px;
    margin-bottom: 15px;
    background: rgb(221,141,7);
		background: linear-gradient(90deg, rgba(221,141,7,1) 10%, rgba(160,31,242,1) 45%, rgba(3,35,123,1) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  }
  p {
    text-wrap: pretty;
    line-height: 1.8;
    font-weight: 500;
    margin-bottom: 30px;
    
    max-width: 35ch;
  }
  button {
    background-color: orange;
  }
  button:hover {
    background-color: green;
  }
  .photo-me {
    width: 100%;
    height: 96vh;
    position: absolute;
    z-index: 0;
    display: flex;
    justify-content: center;
  }
  .photo-me > img {
    width: inherit;
    max-width: 408px;
  }
  .cardboard {
    position: absolute;
    width: 100%;
    top: 50dvh;
    z-index: 10;
    display: flex;
    justify-content: center;
    
  }
  .cardboard > img {
    width: 100vw;
    max-width: 408px;
  }

  .h-line {
    width: 100%;
    height: 2px;
    background-color: grey;
  }


  @media screen and (min-width: 1024px) {
    section {
      display: flex;
      flex-direction: row;
    }
    .text-me {
      width: 100%;
      height: 80vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin-top: 2em;
      padding: 3rem;
    }
    h1 {
      font-size: 5.7rem;
      line-height: 1.2;
      margin-block: 10px;
    }
    
    .photo-me {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  }
</style>