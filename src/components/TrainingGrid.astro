  div:last-child {
    height: auto;
    text-align: center;
  }
  div:first-child{
    flex-direction: column;
    justify-content: center;
  }
  div {
    display: flex;
    flex-wrap: wrap;
    gap: 9px;
    justify-content: left;
    align-items: center;
    height: 45%;
    margin-left: 9px;
  }
  @media (min-width: 800px) {
    article{
    grid-column: span 5 ;
  }
  }
</style>