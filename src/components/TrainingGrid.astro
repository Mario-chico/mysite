---
interface Props {
  title: string;
  text?: string;
}

const {title, text} = Astro.props;
---
<article>
  <div>
    <slot name="svg"/>
    <h3>{title}</h3>
  </div>
  <div>
    <slot name="content"/>
  </div>

</article>

<style>

  article{
    border: 1px solid #fff;
    grid-column: span 1 / span 1;
    padding: 1.5rem;
    border-radius: 10px;
    position: relative;
  }
