---
import { Image } from "astro:assets";
import LightMario from "@/img/light-mario.webp";
import DarkMario from "@/img/dark-mario.webp";
import { getI18N } from "@/i18n";

const {currentLocale} = Astro;

const i18n = getI18N({currentLocale})
---

<section>
    <!-- <img src="/dark-mario.webp" alt=""> -->
    <Image src={LightMario} class="lightImg" widths={[ 300, LightMario.width]}
    sizes={`(max-width: 720px) 300px, (max-width: 1000px) ${LightMario.width}px `} alt="yo pues" loading="eager" />
    <Image  class="darkImg" widths={[230, DarkMario.width]}
    sizes={`(max-width: 720px) 230px, (max-width: 1000px) ${DarkMario.width}px `}src={DarkMario} alt="yo pues" loading="eager"/>
    
  <div class="text-me">
    <h3 set:html={i18n.ME_SUBTITLE}/>
    <h1 class="me-title">{i18n.ME_TITLE}</h1>
    <p set:html={i18n.ME_PARAGRAPH}></p>
    <div class="box">
      {
        currentLocale === 'es' ?(
        <button class="button" data-tally-open="npA9MZ" data-tally-layout="modal" data-tally-auto-close="1000">{i18n.ME_BTNTEXT}</button>
        ):(
        <button class="button" >eyo</button>
        )

      }
    </div>
  </div>
</section>
<div class="h-line"></div>

<style>
  section {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100dvh;
  }

  img {
    width: 205px;
    height: 194px;
    border-radius: 45%;
  }

  .text-me {
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1em;
  }
  h3 {
    
    margin-bottom: 0;
    text-align: center;
    
  }
  .me-title {
    text-transform: uppercase;
    line-height: 1.2;
    text-align: center;
    margin-top: 10px;
    margin-bottom: 15px;
		background: var(--gradient-color);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  p {
    line-height: 1.8;
    font-weight: 500;
    text-align: start;
    max-width: 31ch;
  }
  .box{
    margin-top: 39px;
  }
  .button{
    padding: 0.7rem;
    border-radius: 8px;
    border-color: var(--border-color);
    cursor: pointer;
    font-weight: 800;
    background-color: #fff;
    background: linear-gradient(var(--tex-color) 0 0) var(--j, 0%) / var(--j, 0%) no-repeat;
    transition: .4s, background-position 0s;
    color: var(--tex-color);
  }
  .button:hover{
    --j: 100%;
    color: var(--p2);
  }

  .h-line {
    width: 100%;
    height: 2px;
    background-color: grey;
  }
 

@media screen and (max-width: 700px){
  .box{
    width: 70%;
  }

}

  @media screen and (min-width: 768px) {

  }
  @media screen and (min-width: 1024px) {
    section {
      display: flex;
      flex-direction: row;
      gap: 1rem;
      max-width: 70%;
    margin: 0 auto;
    }
    img{
      width: auto;
      height: 294px;
      border-radius: 0;
      mask-image: linear-gradient(to bottom, black 90%, transparent 100%);
      filter: drop-shadow(0 0 5px rgba(0, 0, 0, .5));
    }
    .text-me {
      position: relative;
      max-width: 500px;
      height: fit-content;
      align-items: center;
      margin-top: 2em;
    }
    h1 {
      font-size: 4rem;
      line-height: 1.2;
      margin-block: 10px;
    } 
    .cardboard {
      display: none;
    }
  }
</style>