---
import Hamburger from '@/components/Hamburger.astro';
import Navigation from '@/components/Navigation.astro';
import ThemeIcon from '@/components/ThemeIcon.astro';
---
<header id="nav-menu">
  <div class="container">
    <div class="nav-start">
      <a class="logo" href="/">
        <img src="https://media.licdn.com/dms/image/D5603AQGKUXkod03p2Q/profile-displayphoto-shrink_200_200/0/1666323977932?e=1717027200&v=beta&t=DxQ95cYg5-1cigoNUDSonghGfJjYXi-tF_7cddVRS4A" 
             width="35" 
             height="35" 
             alt="Inc Logo"
          />
      </a>
      <nav class="menu">
        
        <div class="nav-links">
          <a href="/">Home</a>
          <a href="/about/">Acerca de mi</a>
          <a href="/blog/">Blog</a>
          <a href="/tags/">tags</a>
        </div>
      </nav>
    </div>

    <div class="nav-end">
      <div class="right-container">
       <ThemeIcon />
        <button id="hamburger" aria-label="hamburger" aria-haspopup="true" aria-expanded="false">
          <i class="bx bx-menu" aria-hidden="true">&#9776;</i>
        </button>
      </div>
    </div>
  </div>
</header>
<style>
  #nav-menu {
  border-bottom: 1px solid #eeeeee;
  position: fixed;
  width: 100dvw;
  z-index: 10000;
}
  .container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 1600px;
  margin: 0 auto;
  column-gap: 2rem;
  height: 8dvh;
  padding: 1.2rem 3rem;
}
.logo {
  margin-right: 1.5rem;
}
.menu {
  position: relative;
}
.menu.show{
    display: block;
  }
.nav-start,
.nav-end,
.right-container {
  display: flex;
  align-items: center;
}
.right-container {
  column-gap: 1rem;
}
#hamburger {
  display: none;
  padding: 0.1rem;
  margin-left: 1rem;
  font-size: 1.9rem;
}

@media (max-width: 600px) {
  #hamburger {
    display: block;
    position: relative;
  }

  .container {
    padding: 0.7rem;
  }

  .menu {
    display: none;
    position: absolute;
    top: 87px;
    left: 0;
    min-height: 100vh;
    width: 100vw;
  }
}


</style>
