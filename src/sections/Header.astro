---
import Hamburger from '@/components/Hamburger.astro';
import Navigation from '@/components/Navigation.astro';
import ThemeIcon from '@/components/ThemeIcon.astro';
---
<header id="nav-menu">
  <div class="container">
    <div class="nav-start">
      <a class="logo" href="/">
        <img src="https://media.licdn.com/dms/image/D5603AQGKUXkod03p2Q/profile-displayphoto-shrink_200_200/0/1666323977932?e=1717027200&v=beta&t=DxQ95cYg5-1cigoNUDSonghGfJjYXi-tF_7cddVRS4A" 
             width="35" 
             height="35" 
             alt="Inc Logo"
          />
      </a>
      
      <Navigation />
      
    </div>

    <div class="nav-end">
       <ThemeIcon />
        <button id="hamburger" aria-label="hamburger" aria-haspopup="true" aria-expanded="false">
          <Hamburger />
        </button>
    </div>
  </div>
</header>
<style>
  #nav-menu {
  border-bottom: 1px solid #eeeeee;
  position: fixed;
  width: 100dvw;
  height: 8dvh;
  z-index: 10000;
}
.container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: inherit;
  padding: 0.7rem 1.8rem;
  
}
#hamburger {
  display: block;
  position: relative;
  height: 30px;
  width: 30px;
  background: transparent;
  border: none;
}
  .nav-start,
  .nav-end {
  display: flex;
  align-items: center;
  }
  .nav-end{
    gap: 1rem;
  }
  .logo {
  margin-right: 1.5rem;
  }


@media (min-width: 600px) {
  
  
  #hamburger {
  display: none;
  padding: 0.1rem;
  margin-left: 1rem;
  font-size: 1.9rem;
  }
  .container { 
    max-width: 1600px;
    padding: 1.2rem 3rem;
  }
}


</style>
