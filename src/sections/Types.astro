---
import TrainingGrid from "@/components/TrainingGrid.astro";
import Endurance from "@/icons/endurance.astro";
import Strength from "@/icons/strength.astro";
import Hipertrophy from "@/icons/hipertrophy.astro";
import Loss from "@/icons/loss.astro";
import Power from "@/icons/power.astro";
import Longevity from "@/icons/longevity.astro";
import Breath from "@/icons/breathwork.astro";
import Mental from "@/icons/mentalhealth.astro";
import { getI18N } from "@/i18n";

const {currentLocale} = Astro;

const i18n = getI18N({currentLocale})

---

<section>
  <h2>{i18n.TRAINING_TYPES}</h2>
  <div>
    <TrainingGrid title={i18n.TRAINING_TITLES.ENDURANCE} >
      <Endurance slot="svg"/>
      <p slot="content">{i18n.TRAINING_DESCRIPTIONS.ENDURANCE}</p>
    </TrainingGrid>
    <TrainingGrid title={i18n.TRAINING_TITLES.STRENGTH}>
      <Strength slot="svg"/>
      <p slot="content">Strength is the amount of force your muscles can exert. It's about lifting heavy weights and building up your muscle power to handle tougher tasks with ease.</p>
    </TrainingGrid>
    <TrainingGrid title={i18n.TRAINING_TITLES.HIPERTROPHY}>
      <Hipertrophy slot="svg"/>
      <p slot="content">Hypertrophy is the process of increasing the size of your muscle cells. It's about bulking up and gaining more muscle mass through targeted training and proper nutrition.</p>
    </TrainingGrid>
    <TrainingGrid title={i18n.TRAINING_TITLES.WEIGHT_LOSS}>
      <Loss slot="svg"/>
      <p slot="content">Weight Loss is the process of losing weight. It's about maintaining a healthy weight and losing excess body fat.</p>
    </TrainingGrid>
    <TrainingGrid title={i18n.TRAINING_TITLES.POWER}>
      <Power slot="svg"/>
      <p slot="content">Power is the combination of strength and speed. It's about generating maximum force in the shortest amount of time, like in explosive movements like sprinting or jumping.</p>
    </TrainingGrid>
    <TrainingGrid title={i18n.TRAINING_TITLES.LONGEVITY}>
      <Longevity slot="svg"/>
      <p slot="content">Longevity is about maintaining your health and physical function as you age. It's about developing sustainable habits and lifestyle choices that support your well-being in the long run.</p>
    </TrainingGrid>
    <TrainingGrid title={i18n.TRAINING_TITLES.BREATHWORK}>
      <Breath slot="svg" />
      <p slot="content">Breath-work is the practice of controlling and manipulating your breathing patterns. It's about finding ways to improve your respiratory health, reduce stress, and enhance your overall performance.</p>
    </TrainingGrid>
    <TrainingGrid title={i18n.TRAINING_TITLES.MENTALHEALTH}>
      <Mental slot="svg" />
      <p slot="content">Mental health training is about building resilience, managing stress, and improving your cognitive abilities. It's about developing mental strategies and practices that support your overall well-being and help you perform at your be</p>
    </TrainingGrid>
  </div>
</section>

<style>
  section {
      max-width: 90%;
      width: 100%;
      margin: auto;
    }
    h2{
      margin-block: 2rem;
      letter-spacing: .2rem;
      font-size: 2rem;
      text-align: center;
    }
    div {
      display: grid;
      grid-gap: 1rem;
      grid-auto-rows: 20rem;
    }
    p{
      width: 100%;
    }
    @media (min-width: 800px) {
      div {
        grid-template-columns: repeat(10, minmax(0, 2fr));
      }
    }
    @media (min-width: 1024px) {
      h2 {
        margin-block: 4rem;
        letter-spacing: .5rem;
        font-size: 3rem;
      }
      section {
        max-width: 70%;
      }
    }
</style>