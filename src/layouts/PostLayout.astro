---
import Image from "astro/components/Image.astro";
import Layout from "./Layout.astro";
import '@/post.css'
const { frontmatter } = Astro.props;
const {currentLocale} = Astro;

let fecha = frontmatter.pubDate;

const bDate = new Intl.DateTimeFormat(currentLocale, {
  dateStyle: 'long',
  timeZone: 'UTC'
}).format(fecha)
---

<Layout title={frontmatter.title}>
  <main>
    <header class="post-header">
      <h1>{frontmatter.title}</h1>
      <span> <time datetime={fecha}>{bDate}</time> | {frontmatter.author}</span>
      
      <p>{frontmatter.description}</p>
      <Image src={frontmatter.image.url} alt={frontmatter.image.alt} loading={"eager"} width={1500} height={643}/>
    </header>
    <article>
      <!--<div class="tags">
        {
          frontmatter.tags.map((tag: any) => (
          <p class="tag">
            <a href={`/tags/${tag}`}>{tag}</a>
          </p>
          ))
        }
      </div>
      <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} /> -->
      <slot />
    </article>
  </main>
</Layout>
<style>
  
  header {
    padding-block: 9dvh;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin: 0 auto;
    max-width: 1024px;
  }
  article {
    display: flex;
    flex-direction: column;
    width: 100dvw;
    align-items: center;
    max-width: 90%;
    margin: 0 auto;
    max-width: 1024px;
  }
  a {
    color: #00539f;
  }
  .tags {
    display: flex;
    flex-wrap: wrap;
  }
  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
  img {
    max-width: 100%;
    object-fit: cover;
    height: auto;
    min-height: 240px;
  }
  @media screen and (min-width: 1024px) {
    /* header {
    padding-top: 15dvh;
    padding-bottom: 8dvh;
  } */
  }
</style>
