---
import '@fontsource-variable/geologica';
interface Props {
	title: string;
  phrase: string;

}

const { title, phrase } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>
</head>
<body>
  <header>
    <a href="./">Inicio</a>
  </header>
  <main>
    <h1>{phrase}</h1>
    <slot/>
  </main>

</body>
</html>
<style is:global>
 :root{
  --table-header-color: #ff0000;
  --table-instructions-color: #ffffff;
  --table-tr-background-color: #1a1a4d;
  --background-color: #f1edec;
 }
 * {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	html {
		font-family: 'Geologica Variable', sans-serif;
		background-color: var(--background-color);
	}
  header{
    padding: 1rem;
    position: fixed;
    width: 100dvw;
    height: 7dvh;
    z-index: 100;
    backdrop-filter: blur(10px);
  }
	main{
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100dvh;
    padding: 1rem;
  }
  h1{
    text-align: center;
    margin-top: 5dvh;
  }
  a{
    color: #03037e;
    font-weight: 600;
  }
  a:visited{
    color: #03037e;
  }
</style>